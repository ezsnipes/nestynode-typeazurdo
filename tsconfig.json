{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "declaration": false,
    "noImplicitReturns": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "pretty": true,
    "esModuleInterop": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "dist/",
    "baseUrl": "src/"
  },
  "compileOnSave": true,
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}