{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "target": "es6",
    "sourceMap": true,
    "allowJs": true,
    "outDir": "dist/",
    "baseUrl": "src/"
  },
  "compileOnSave": false,
  "include": [
    "main.ts",
    "src/**/**"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}